# Portal Razvitie - Environment Variables
# Copy this file to .env and update with your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=portal_user
DB_PASSWORD=changeme_secure_password
DB_NAME=portal_razvitie
DB_SSLMODE=disable

# ============================================
# SERVER CONFIGURATION
# ============================================
SERVER_PORT=5000
GIN_MODE=debug
# Options: debug, release

# ============================================
# RBAC & CACHING
# ============================================
RBAC_CACHE_TTL=300
# Cache TTL in seconds (300 = 5 minutes)

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
# Comma-separated list of allowed origins

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
# Options: debug, info, warn, error

# ============================================
# FILE UPLOADS
# ============================================
UPLOAD_MAX_SIZE=10485760
# Max file size in bytes (10MB = 10485760)
UPLOAD_DIR=./uploads

# ============================================
# WEBSOCKET
# ============================================
WS_READ_BUFFER_SIZE=1024
WS_WRITE_BUFFER_SIZE=1024

# ============================================
# OPTIONAL: JWT (if implementing)
# ============================================
# JWT_SECRET=your-secret-key-change-this-in-production
# JWT_EXPIRATION=24h

# ============================================
# OPTIONAL: SMTP (for email notifications)
# ============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@portalrazvitie.ru

# ============================================
# OPTIONAL: Redis (for distributed caching)
# ============================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# ============================================
# OPTIONAL: Sentry (for error tracking)
# ============================================
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=development

# ============================================
# DEVELOPMENT ONLY
# ============================================
# Set to true to enable database query logging
DB_LOG_QUERIES=false

# Set to true to seed database on startup
DB_AUTO_SEED=true
